# =============================================================================
# F2X NeuroHub MES - Production Environment Variables
# Copy this file to .env.production and update values
# =============================================================================

# -------------------------------------------------------------------------
# Database Configuration
# -------------------------------------------------------------------------
POSTGRES_DB=f2x_neurohub_mes
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# -------------------------------------------------------------------------
# Security Settings
# -------------------------------------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_GENERATE_NEW_SECRET_KEY

# -------------------------------------------------------------------------
# Application Settings
# -------------------------------------------------------------------------
DEBUG=false

# -------------------------------------------------------------------------
# CORS Settings
# -------------------------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost,http://your-server-ip

# -------------------------------------------------------------------------
# Port Configuration
# -------------------------------------------------------------------------
HTTP_PORT=80
# HTTPS_PORT=443  # SSL 사용 시 활성화
