{
  "theme_name": "Supabase Inspired - Production Tracker",
  "version": "2.0.0",
  "description": "Supabase 스타일 다크 테마 - 현대적이고 세련된 디자인",
  "colors": {
    "brand": {
      "main": "#3ECF8E",
      "dark": "#2FB574",
      "light": "#57D9A0",
      "contrast": "#ffffff"
    },
    "primary": {
      "main": "#3ECF8E",
      "dark": "#2FB574",
      "light": "#57D9A0",
      "contrast": "#ffffff"
    },
    "success": {
      "main": "#3ECF8E",
      "dark": "#2FB574"
    },
    "danger": {
      "main": "#F04438",
      "dark": "#D92D20"
    },
    "warning": {
      "main": "#F97316",
      "dark": "#EA580C"
    },
    "grey": {
      "200": "#e5e7eb",
      "300": "#d1d5db",
      "400": "#9ca3af",
      "600": "#4b5563",
      "700": "#374151"
    },
    "background": {
      "default": "#0f0f0f",
      "paper": "#0f0f0f",
      "elevated": "#1f1f1f",
      "hover": "#252525",
      "dark": "#0f0f0f"
    },
    "text": {
      "primary": "#ededed",
      "secondary": "#a8a8a8",
      "onDark": "#ffffff",
      "onBrand": "#000000"
    },
    "border": {
      "default": "#1a1a1a",
      "light": "#2a2a2a",
      "dark": "#1a1a1a"
    },
    "glow": {
      "brand": "#3ECF8E",
      "brandSoft": "#3ECF8E40",
      "brandMedium": "#3ECF8E60"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "'Noto Sans KR', Inter, -apple-system, BlinkMacSystemFont, sans-serif"
    },
    "size": {
      "title": 18,
      "body": 14,
      "caption": 12
    },
    "weight": {
      "normal": 400,
      "medium": 500,
      "bold": 700
    }
  },
  "spacing": {
    "sm": 8,
    "md": 16,
    "lg": 24
  },
  "radius": {
    "sm": 4,
    "md": 8,
    "lg": 16
  },
  "shadows": {
    "small": "0 2px 8px rgba(0, 0, 0, 0.6)",
    "medium": "0 4px 16px rgba(0, 0, 0, 0.7)",
    "brandGlow": "0 0 24px rgba(62, 207, 142, 0.5), 0 0 12px rgba(62, 207, 142, 0.3)"
  },
  "layout": {
    "windowWidth": 400,
    "windowHeight": 600,
    "cardPadding": 16,
    "contentPadding": 20
  },
  "components": {
    "statusBar": {
      "default": {
        "backgroundColor": "{colors.background.paper}",
        "color": "{colors.text.secondary}",
        "fontSize": "{typography.size.caption}",
        "padding": "{spacing.sm}"
      }
    },
    "statusLabel": {
      "success": {
        "fontSize": "{typography.size.body}",
        "color": "{colors.success.main}",
        "fontWeight": "{typography.weight.medium}"
      },
      "danger": {
        "fontSize": "{typography.size.body}",
        "color": "{colors.danger.main}",
        "fontWeight": "{typography.weight.medium}"
      }
    },
    "card": {
      "default": {
        "background": "{colors.background.paper}",
        "border": "1px solid {colors.border.default}",
        "borderRadius": "{radius.lg}",
        "padding": "{spacing.lg}",
        "boxShadow": "{shadows.medium}"
      }
    },
    "button": {
      "default": {
        "background": "{colors.background.elevated}",
        "color": "{colors.text.primary}",
        "border": "1px solid {colors.border.default}",
        "borderRadius": "{radius.md}",
        "padding": "{spacing.sm} {spacing.md}",
        "fontSize": "{typography.size.body}",
        "fontWeight": "{typography.weight.medium}"
      },
      "primary": {
        "background": "{colors.primary.main}",
        "color": "{colors.text.onBrand}",
        "border": "none",
        "borderRadius": "{radius.md}",
        "padding": "{spacing.sm} {spacing.md}",
        "fontSize": "{typography.size.body}",
        "fontWeight": "{typography.weight.bold}"
      },
      "danger": {
        "background": "{colors.danger.main}",
        "color": "#ffffff",
        "border": "none",
        "borderRadius": "{radius.md}",
        "padding": "{spacing.sm} {spacing.md}",
        "fontSize": "{typography.size.body}",
        "fontWeight": "{typography.weight.bold}"
      }
    },
    "label": {
      "title": {
        "fontSize": "{typography.size.title}",
        "fontWeight": "{typography.weight.bold}",
        "color": "{colors.text.primary}"
      },
      "body": {
        "fontSize": "{typography.size.body}",
        "fontWeight": "{typography.weight.normal}",
        "color": "{colors.text.primary}"
      },
      "caption": {
        "fontSize": "{typography.size.caption}",
        "fontWeight": "{typography.weight.normal}",
        "color": "{colors.text.secondary}"
      }
    }
  },
  "globalStyles": {
    "QWidget": {
      "font-family": "{typography.fontFamily.primary}",
      "font-size": "{typography.size.body}px",
      "color": "{colors.text.primary}"
    },
    "QMainWindow": {
      "background-color": "{colors.background.default}"
    },
    "QStatusBar": {
      "background-color": "{colors.background.paper}",
      "border-top": "1px solid {colors.border.default}",
      "color": "{colors.text.secondary}",
      "font-size": "{typography.size.caption}px"
    },
    "QMenuBar": {
      "background-color": "{colors.background.paper}",
      "border-bottom": "1px solid {colors.border.default}",
      "color": "{colors.text.primary}",
      "padding": "4px"
    },
    "QMenuBar::item:selected": {
      "background-color": "{colors.background.hover}",
      "color": "{colors.brand.main}"
    },
    "QMenu": {
      "background-color": "{colors.background.elevated}",
      "border": "1px solid {colors.border.default}",
      "border-radius": "{radius.md}px",
      "color": "{colors.text.primary}",
      "padding": "4px"
    },
    "QMenu::item:selected": {
      "background-color": "{colors.glow.brandSoft}",
      "color": "{colors.brand.main}"
    },
    "QLabel": {
      "font-family": "{typography.fontFamily.primary}",
      "font-size": "{typography.size.body}px",
      "color": "{colors.text.primary}",
      "background-color": "transparent"
    },
    "QLineEdit": {
      "background-color": "{colors.background.elevated}",
      "border": "1px solid {colors.border.default}",
      "border-radius": "{radius.md}px",
      "padding": "{spacing.sm}px",
      "color": "{colors.text.primary}"
    },
    "QLineEdit:focus": {
      "border": "1px solid {colors.brand.main}"
    },
    "QMessageBox": {
      "background-color": "{colors.background.paper}",
      "color": "{colors.text.primary}"
    },
    "QMessageBox QLabel": {
      "color": "{colors.text.primary}"
    },
    "QMessageBox QPushButton": {
      "background-color": "{colors.background.elevated}",
      "color": "{colors.text.primary}",
      "border": "1px solid {colors.border.default}",
      "border-radius": "{radius.md}px",
      "padding": "{spacing.sm}px {spacing.md}px",
      "min-width": "80px"
    },
    "QMessageBox QPushButton:hover": {
      "background-color": "{colors.background.hover}",
      "border": "1px solid {colors.brand.main}"
    },
    "QFrame": {
      "font-family": "{typography.fontFamily.primary}"
    }
  }
}